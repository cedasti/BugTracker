@model BugTracker.Models.Bugs

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-white">Create</h1>

<h4 class="text-white">Bugs</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form class="text-white" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tickets" class="control-label text-white"></label>
                <input asp-for="Tickets" class="form-control" />
                <span asp-validation-for="Tickets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label text-white"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label text-white"></label>

                <select id="select1" asp-for="Priority">
                    <option selected disabled>Select</option>
                    <option>Immediate</option>
                    <option>Urgent</option>
                    <option>Medium</option>
                    <option>Low</option>
                    <option>Very low</option>
                    <option>Closed</option>
                </select>

                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label text-white">Time Created</label>
                <select id="select1" asp-for="TimeCreated">
                    <option>@DateTime.Now</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label text-white">Due date</label>
                <input asp-for="DueDate" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <a asp-action="Index" class="btn btn-primary mx-2">
        <i class="fas fa-long-arrow-alt-left"></i> <!--BackToList-->
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
