@model BugTracker.Models.Bugs

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-white">Delete</h1>

<h3 class="text-white">Are you sure you want to delete this?</h3>
<div>
    <h4 class="text-white">Bugs</h4>
    <hr />
    <dl class="row text-white">
        <dt class="col-sm-2">
            Project
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Projects)
        </dd>
        <dt class="col-sm-2">
            Ticket
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tickets)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        <dd class="btn text-white 
            @(Model.Priority == "Immediate" ? "red" :
            Model.Priority == "Urgent" ? "chocolate" :
            Model.Priority == "Medium" ? "gold" :
            Model.Priority == "Low" ? "yellow" :
            Model.Priority == "Very low" ? "olive" :
            Model.Priority == "Closed" ? "green" : "")">
            @Html.DisplayFor(model => model.Priority)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <a asp-action="Index" class="btn btn-primary">
        <i class="fas fa-long-arrow-alt-left"></i> <!--BackToList-->
        </a>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
